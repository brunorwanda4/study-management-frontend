{
  // -----------------------------
  // CSpell custom dictionary
  // -----------------------------
  "cspell.words": ["cmdk", "intereset", "Loadingclass", "SCHOOLSTAFF", "TVET"],

  // -----------------------------
  // Tailwindcss
  // -----------------------------
  "lsp": {
      "tailwindcss-language-server": {
        "settings": {
          "classFunctions": ["cva", "cx"],
          "experimental": {
            "classRegex": ["[cls|className]\\s\\:\\=\\s\"([^\"]*)"]
          }
        }
      }
    },
  // -----------------------------
  // Biome formatter + LSP
  // -----------------------------
  "format_on_save": true,
  "format_on_paste": true,

  // Tell Zed to use biome for formatting
  "language_overrides": {
    "javascript": { "formatter": "biome" },
    "typescript": { "formatter": "biome" },
    "javascriptreact": { "formatter": "biome" },
    "typescriptreact": { "formatter": "biome" },
    "json": { "formatter": "biome" },
    "html": { "formatter": "biome" },
    "css": { "formatter": "biome" }
  },

  // -----------------------------
  // Code Actions on Save
  // (similar to source.fixAll, organizeImports)
  // -----------------------------
  "code_actions_on_save": {
    "source.organizeImports": true,
    "source.fixAll": true
  },

  // -----------------------------
  // Custom TypeScript SDK
  // -----------------------------
  "typescript.tsdk": "node_modules/typescript/lib"
}
